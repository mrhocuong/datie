@using DatieProject.Models
@{ var session = (ApplicationUser) Session["User"]; }
@if (Session["User"] != null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " +session.Info.Username + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
        <li>@Html.ActionLink("Log Out", "LogOff", "Login")</li></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
