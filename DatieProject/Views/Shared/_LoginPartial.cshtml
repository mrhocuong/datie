@using DatieProject.Models
@{ var session = (ApplicationUser) Session["User"]; }
@if (Session["User"] != null)
{
    <ul class="nav navbar-nav navbar-right" style="margin-right: 20px">
        <li>
            @Html.ActionLink("Welcome " + session.Info.Username + "!", "HomePage", "Login", routeValues: null, htmlAttributes: new { title = "Manage", style = "font-weight:bold;" })
        </li>
        <li>
        <li>@Html.ActionLink("Log Out", "LogOff", "Login")</li></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-right: 20px">
        <li>@Html.ActionLink("Log in", "Index", "Login", routeValues: null, htmlAttributes: new { id = "loginLink", style = "font-weight:bold;" })</li>
    </ul>
}
